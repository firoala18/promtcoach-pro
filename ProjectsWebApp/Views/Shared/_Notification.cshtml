@if (TempData["success"] != null)
{
    <script type="text/javascript">
        (function waitToastr(){
            if (window.toastr) {
                var msg = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(TempData["success"]));
                toastr.options = Object.assign({ positionClass: 'toast-bottom-right' }, toastr.options || {});
                toastr.success(msg);
            } else { setTimeout(waitToastr, 50); }
        })();
    </script>
}

