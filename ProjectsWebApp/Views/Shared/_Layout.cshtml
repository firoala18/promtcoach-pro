    <script>
        // ============================================================
        // Barrierefreiheit: Kontrastmodus-Verwaltung (WCAG 2.1 AA)
        // ============================================================
        (function() {
            const CONTRAST_MODES = ['normal', 'high-contrast-dark', 'high-contrast-light'];
            const STORAGE_KEY = 'accessibilityContrastMode';

            function setContrastMode(mode) {
                // Remove all contrast classes
                CONTRAST_MODES.forEach(m => {
                    document.body.classList.remove(m);
                    document.documentElement.classList.remove(m);
                });

                // Add new mode class (except for 'normal')
                if (mode && mode !== 'normal') {
                    document.body.classList.add(mode);
                    document.documentElement.classList.add(mode);
                }

                // Save preference
                localStorage.setItem(STORAGE_KEY, mode || 'normal');

                // Update checkmarks in dropdown
                document.querySelectorAll('.contrast-option').forEach(btn => {
                    const isActive = btn.dataset.contrast === (mode || 'normal');
                    btn.classList.toggle('active', isActive);
                    const checkMark = btn.querySelector('.check-mark');
                    if (checkMark) {
                        checkMark.style.display = isActive ? 'inline' : 'none';
                    }
                });

                // Announce change to screen readers
                announceToScreenReader('Kontrastmodus geändert zu: ' + getModeName(mode));
            }

            function getModeName(mode) {
                const names = {
                    'normal': 'Standard',
                    'high-contrast-dark': 'Hoher Kontrast (Dunkel)',
                    'high-contrast-light': 'Hoher Kontrast (Hell)'
                };
                return names[mode] || 'Standard';
            }

            function announceToScreenReader(message) {
                const announcement = document.createElement('div');
                announcement.setAttribute('role', 'status');
                announcement.setAttribute('aria-live', 'polite');
                announcement.setAttribute('aria-atomic', 'true');
                announcement.className = 'visually-hidden';
                announcement.textContent = message;
                document.body.appendChild(announcement);
                setTimeout(() => announcement.remove(), 1000);
            }

            // Initialize on DOM ready
            document.addEventListener('DOMContentLoaded', function() {
                // Load saved preference
                const savedMode = localStorage.getItem(STORAGE_KEY) || 'normal';
                setContrastMode(savedMode);

                // Attach click handlers to contrast options
                document.querySelectorAll('.contrast-option').forEach(btn => {
                    btn.addEventListener('click', function() {
                        const mode = this.dataset.contrast;
                        setContrastMode(mode);
                    });
                });

                // Support system preference for high contrast
                if (window.matchMedia) {
                    const prefersContrast = window.matchMedia('(prefers-contrast: more)');
                    if (prefersContrast.matches && !localStorage.getItem(STORAGE_KEY)) {
                        setContrastMode('high-contrast-dark');
                    }
                    prefersContrast.addEventListener('change', (e) => {
                        if (e.matches && !localStorage.getItem(STORAGE_KEY)) {
                            setContrastMode('high-contrast-dark');
                        }
                    });
                }
            });
        })();

        (function(){
            try {
                if (typeof window.jQuery === 'undefined' || typeof $.ui === 'undefined') {
                    var s = document.createElement('script');
                    s.src = 'https://code.jquery.com/ui/1.13.2/jquery-ui.min.js';
                    s.defer = true;
                    document.head.appendChild(s);
                }
            } catch {}
        })();

        document.addEventListener("DOMContentLoaded", function () {
            const slider = document.getElementById("fontSlider");
            const label = document.getElementById("fontValueLabel");
            const savedSize = localStorage.getItem("fontSizePercentage") || 100;

            document.documentElement.style.fontSize = savedSize + '%';
            slider.value = savedSize;
            label.textContent = savedSize + '%';

            slider.addEventListener("input", function () {
                const size = slider.value;
                document.documentElement.style.fontSize = size + '%';
                localStorage.setItem("fontSizePercentage", size);
                label.textContent = size + '%';
            });
        });
    </script>
