<body class="d-flex flex-column min-vh-100 @(isAdmin ? "admin-area" : string.Empty)">
    <!-- Wrapper section -->
    <section class="section">
        <!-- 1) Thin top toolbar -->
        <div class="bg-light border-bottom" style="min-height: 40px;">
            <div class="d-flex flex-wrap justify-content-end align-items-center" style="min-height: 40px; background:white;">

                <a class="btn btn-link text-dark uebersicht-btn d-flex align-items-center flex-wrap"
                   href="mailto:@ContactEmailService.GetEmail()"
                   style="text-decoration: none; color: black; font-size: 1rem;">
                    <span>E-Mail</span>
                </a>



                <!-- Übersicht Link styled as Button -->
                <a class="btn btn-link text-dark uebersicht-btn d-flex align-items-center flex-wrap"
                   asp-controller="Home" asp-area="user" asp-action="Uebersicht"
                   style="text-decoration: none; color: black; font-size: 1rem;">
                    <span>Übersicht</span>
                </a>



                <!-- Barrierefreiheit: Kontrast-Umschalter -->
                <div class="dropdown">
                    <button class="btn btn-link text-dark dropdown-toggle accessibility-btn" type="button"
                            id="contrastDropdown" data-bs-toggle="dropdown" aria-expanded="false"
                            aria-label="Kontrastmodus auswählen" style="text-decoration: none;">
                        <i class="bi bi-circle-half me-1"></i>
                        <span class="d-none d-sm-inline">Kontrast</span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end contrast-menu" aria-labelledby="contrastDropdown">
                        <li class="dropdown-header">Kontrastmodus</li>
                        <li>
                            <button class="dropdown-item contrast-option" data-contrast="normal" type="button">
                                <i class="bi bi-sun me-2"></i>Standard
                                <span class="check-mark ms-auto"><i class="bi bi-check-lg"></i></span>
                            </button>
                        </li>
                        <li>
                            <button class="dropdown-item contrast-option" data-contrast="high-contrast-dark" type="button">
                                <i class="bi bi-moon-fill me-2"></i>Hoher Kontrast (Dunkel)
                                <span class="check-mark ms-auto"><i class="bi bi-check-lg"></i></span>
                            </button>
                        </li>
                        <li>
                            <button class="dropdown-item contrast-option" data-contrast="high-contrast-light" type="button">
                                <i class="bi bi-brightness-high me-2"></i>Hoher Kontrast (Hell)
                                <span class="check-mark ms-auto"><i class="bi bi-check-lg"></i></span>
                            </button>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li class="px-3 py-2">
                            <small class="text-muted">
                                <i class="bi bi-info-circle me-1"></i>
                                WCAG 2.1 AA konform
                            </small>
                        </li>
                    </ul>
                </div>


                <!-- Schriftgröße Dropdown -->
                <div class="dropdown">
                    <button class="btn btn-link text-dark dropdown-toggle" type="button" id="fontSizeDropdown"
                            data-bs-toggle="dropdown" aria-expanded="false" style="text-decoration: none;">
                        <i class="fas fa-font me-1"></i> <span class="d-none d-sm-inline">Schriftgröße</span>
                    </button>

                    <ul class="dropdown-menu dropdown-menu-end p-3" aria-labelledby="fontSizeDropdown" style="min-width: 220px;">
                        <li>
                            <label for="fontSlider" class="form-label mb-1">Textgröße:</label>
                            <input type="range" id="fontSlider" min="80" max="150" step="5" value="100" class="form-range" />
                            <div class="text-end small text-muted" id="fontValueLabel">100%</div>
                        </li>
                    </ul>
                </div>

                <!-- Leichte Sprache Link styled as Button -->
                <a class="btn btn-link text-dark me-2 leichteSprache-btn"
                   asp-controller="Home" asp-area="user" asp-action="Leichtesprache"
                   style="text-decoration: none; color: black;">
                    <span class="d-inline-block btn">
                        <img src= "@Url.Content("~/images/Leichte_sprache_logo.svg")" alt="Leichte Sprache Icon" style="width: 16px; height: 16px; margin-right: 8px;" />
                        <span class="d-none d-sm-inline">Leichte Sprache</span>
                    </span>

                </a>

                @if (!SignInManager.IsSignedIn(User))
                {
                    <a class="btn btn-link text-dark ms-2"
                       asp-area="Identity" asp-page="/Account/Login"
                       style="text-decoration: none; color: black; font-size: 1rem;">
