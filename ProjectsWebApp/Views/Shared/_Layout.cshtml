<!-- Accessibility Toolbar Styles -->
<style>
    /* ============================================================
       ACCESSIBILITY TOOLBAR - Kontrast & Schriftgröße Dropdowns
       ============================================================ */

    /* Top toolbar buttons */
    .accessibility-btn,
    .uebersicht-btn,
    .leichteSprache-btn {
        font-size: 0.9rem !important;
        font-weight: 500;
        color: #374151 !important;
        padding: 0.5rem 0.85rem !important;
        border-radius: 8px !important;
        transition: background 0.2s ease, color 0.2s ease !important;
        border: none !important;
    }

    .accessibility-btn:hover,
    .uebersicht-btn:hover,
    .leichteSprache-btn:hover {
        background: rgba(137, 186, 23, 0.12) !important;
        color: #6d9412 !important;
    }

    .accessibility-btn:focus,
    .uebersicht-btn:focus,
    .leichteSprache-btn:focus {
        box-shadow: none !important;
        outline: 2px solid #89ba17 !important;
        outline-offset: 2px;
    }

    .accessibility-btn i {
        transition: transform 0.2s ease;
    }

    .accessibility-btn:hover i {
        transform: rotate(15deg);
    }

    /* Contrast dropdown menu */
    .contrast-menu {
        border: none !important;
        border-radius: 12px !important;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.12), 0 0 0 1px rgba(0, 0, 0, 0.05) !important;
        padding: 0.5rem !important;
        min-width: 240px !important;
        margin-top: 0.25rem !important;
    }

    .contrast-menu .dropdown-header {
        font-size: 0.7rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: #6d9412;
        padding: 0.75rem 1rem 0.5rem;
        border-bottom: 1px solid #f0f0f0;
        margin-bottom: 0.25rem;
    }

    /* Contrast option buttons */
    .contrast-option {
        display: flex !important;
        align-items: center !important;
        padding: 0.65rem 1rem !important;
        border-radius: 8px !important;
        font-size: 0.9rem !important;
        font-weight: 500 !important;
        color: #374151 !important;
        background: transparent !important;
        border: none !important;
        width: 100%;
        text-align: left;
        transition: background 0.15s ease, color 0.15s ease !important;
        margin: 2px 0;
    }

    .contrast-option i:first-child {
        font-size: 1rem;
        width: 24px;
        color: #6b7280;
        transition: color 0.15s ease;
    }

    .contrast-option:hover {
        background: rgba(137, 186, 23, 0.12) !important;
        color: #4a7c10 !important;
    }

    .contrast-option:hover i:first-child {
        color: #89ba17;
    }

    .contrast-option:focus {
        outline: none !important;
        box-shadow: inset 0 0 0 2px rgba(137, 186, 23, 0.4) !important;
    }

    /* Active/selected state */
    .contrast-option.active {
        background: linear-gradient(135deg, #89ba17 0%, #6d9412 100%) !important;
        color: #fff !important;
    }

    .contrast-option.active i:first-child {
        color: #fff !important;
    }

    .contrast-option.active:hover {
        background: linear-gradient(135deg, #7aa814 0%, #5f820f 100%) !important;
    }

    /* Checkmark styling */
    .contrast-option .check-mark {
        margin-left: auto;
        color: #89ba17;
        font-size: 1.1rem;
        display: none;
    }

    .contrast-option.active .check-mark {
        display: inline-flex !important;
        color: #fff !important;
    }

    /* Dropdown divider */
    .contrast-menu .dropdown-divider {
        margin: 0.5rem 0.75rem;
        border-color: #e5e7eb;
    }

    /* WCAG info footer */
    .contrast-menu .text-muted {
        font-size: 0.75rem;
        color: #6b7280 !important;
        display: flex;
        align-items: center;
        gap: 0.25rem;
    }

    .contrast-menu .text-muted i {
        color: #89ba17;
    }

    /* Font size dropdown styling */
    #fontSizeDropdown {
        font-size: 0.9rem !important;
        font-weight: 500;
        color: #374151 !important;
        padding: 0.5rem 0.85rem !important;
        border-radius: 8px !important;
        transition: background 0.2s ease, color 0.2s ease !important;
    }

    #fontSizeDropdown:hover {
        background: rgba(137, 186, 23, 0.12) !important;
        color: #6d9412 !important;
    }

    #fontSizeDropdown:focus {
        box-shadow: none !important;
        outline: 2px solid #89ba17 !important;
        outline-offset: 2px;
    }

    .dropdown-menu[aria-labelledby="fontSizeDropdown"] {
        border: none !important;
        border-radius: 12px !important;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.12), 0 0 0 1px rgba(0, 0, 0, 0.05) !important;
        margin-top: 0.25rem !important;
    }

    .dropdown-menu[aria-labelledby="fontSizeDropdown"] .form-label {
        font-weight: 600;
        color: #374151;
        font-size: 0.85rem;
    }

    /* Custom range slider */
    #fontSlider {
        accent-color: #89ba17;
    }

    #fontSlider::-webkit-slider-thumb {
        cursor: pointer;
    }

    #fontValueLabel {
        font-weight: 600;
        color: #6d9412;
    }
</style>

