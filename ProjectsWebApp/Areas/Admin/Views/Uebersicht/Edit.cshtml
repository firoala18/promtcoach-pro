@{
    ViewData["Title"] = "Übersicht-Managment";
}

<h2 class="mb-4">Übersicht bearbeiten</h2>


<form method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label for="Content" class="form-label"><strong>Inhalt:</strong></label>
        <textarea id="Content" asp-for="ContentHtml" class="form-control" rows="10">@Model.ContentHtml</textarea>
    </div>

