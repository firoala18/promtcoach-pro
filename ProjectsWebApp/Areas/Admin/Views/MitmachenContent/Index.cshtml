@model IEnumerable<MitmachenContent>
@{
    ViewData["Title"] = "Tipps-Managment";
}
<div class="mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Tipps-Inhalte verwalten</h2>
        <a href="@Url.Action("Upsert", "MitmachenContent", new { area = "Admin" })" style="background:black;color:white;" class="btn addBtn">
            <i class="fas fa-plus"></i> Inhalt hinzufügen
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width: 8%;">#</th>
                    <th style="width: 15%;">Abschnittstyp</th>
                    <th>Title</th>
                    <th>Inhalt</th>
                    <th style="width: 15%;">Aktionen</th>
                </tr>
            </thead>
            <tbody id="sortable">
                @foreach (var item in Model.OrderBy(m => m.DisplayOrder).Select((content, index) => new { Content = content, Index = index }))
                {
                    <tr class="sortable-row" data-id="@item.Content.Id">
                        <!-- Display Order and Handle -->
                        <td class="text-center">
                            <span class="badge bg-info">@((item.Index + 1))</span>
                            <i class="bi bi-grip-vertical handle ms-2" style="cursor: move;"></i>
                        </td>

                        <!-- Section Type -->
                        <td>@item.Content.SectionType</td>

                        <!-- Title -->
                        <td class="fw-bold">@item.Content.Title</td>

                        <!-- Content -->
                        <td>@Html.Raw(item.Content.Content)</td>

                        <!-- Actions -->
                        <td class="text-center">
                            <a href="@Url.Action("Upsert", "MitmachenContent", new { area = "Admin", id = item.Content.Id })"
                               class="btn btn-warning  mx-1" title="Bearbeiten">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            @if (item.Content.SectionType != "Header")
                            {
                                <button class="btn btn-danger  delete-content" data-id="@item.Content.Id" title="Löschen">
                                    <i class="bi bi-trash-fill"></i>
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2></h2>
            <a href="@Url.Action("Upsert", "MitmachenContent", new { area = "Admin" })" style="background:black;color:white;" class="btn addBtn">
                <i class="fas fa-plus"></i> Inhalt hinzufügen
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            // Initialize sortable
            $("#sortable").sortable({
                handle: ".handle",
                update: function () {
                    const ids = [];
                    $("#sortable .sortable-row").each(function (index) {
                        ids.push(parseInt($(this).data("id")));
                        $(this).find(".badge").text(index + 1); // Update the order visually
                    });

                    // Send the new order to the server
                    $.post("@Url.Action("UpdateOrder", "MitmachenContent", new { area = "Admin" })", { ids: ids })
                        .done(function () {
                            Swal.fire({
                                title: "Erfolg",
                                text: "Reihenfolge erfolgreich aktualisiert!",
                                icon: "success",
                                timer: 1000,
                                showConfirmButton: false
                            });
                        })
                        .fail(function () {
                            Swal.fire({
                                title: "Fehler",
                                text: "Beim Aktualisieren der Reihenfolge ist ein Fehler aufgetreten.",
                                icon: "error"
                            });
                        });
                }
            }).disableSelection();

            // Delete functionality
            $(document).on('click', '.delete-content', function () {
                const contentId = $(this).data("id");
                const $row = $(this).closest('tr');

                Swal.fire({
                    title: 'Bist du sicher?',
                    text: "Diese Aktion kann nicht rückgängig gemacht werden!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Ja, löschen!',
                    cancelButtonText: ' Abbrechen'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.post('@Url.Action("Delete", "MitmachenContent", new { area = "Admin" })', { id: contentId })
                            .done(function (response) {
                                if (response.success) {
                                    $row.fadeOut(300, function () {
                                        $(this).remove();
                                    });
                                    Swal.fire('Gelöscht!', response.message, 'success');
                                } else {
                                    Swal.fire('Fehler!', response.message, 'error');
                                }
                            })
                            .fail(function () {
                                Swal.fire('Fehler!', 'Ein Fehler ist aufgetreten. Bitte versuche es erneut.', 'error');
                            });
                    }
                });
            });
        });
    </script>
}
