@model ProjectsWebApp.Models.PromptKeyword
@{
    ViewData["Title"] = Model.Id == 0 ? "Schl端sselbegriff hinzuf端gen" : "Schl端sselbegriff bearbeiten";
}

<style>
    .container { width: 100%; max-width: 100%; }
    .form-section {
        background:#fff; border:1px solid #e4e4e4; border-radius:10px; padding:25px; margin-bottom:25px;
        box-shadow:0 8px 24px rgba(0,0,0,.08); transition: box-shadow .25s, transform .25s;
    }
    .form-section:hover { box-shadow:0 12px 32px rgba(0,0,0,.12); transform: translateY(-2px); }
    .section-title { color:#333; border-bottom:1px solid #e4e4e4; padding-bottom:12px; margin-bottom:20px; font-weight:600; font-size:1.3rem; }
    .form-label { color:#222; font-weight:600; margin-bottom:8px; }
    .form-control { background:#fff; border:1px solid #ced4da; color:#222; padding:10px 15px; border-radius:6px; transition: all .2s; }
    .form-control:focus { border-color:#00d084; box-shadow:0 0 0 .20rem rgba(0,208,132,.25); }
    .btn-primary { background:#00d084; border:1px solid #00d084; color:#fff; padding:10px 25px; font-weight:500; }
    .btn-secondary { background:#e9ecef; border:1px solid #ced4da; color:#000; padding:10px 25px; }
</style>

<div class="mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <form asp-action="Upsert" method="post">
        @Html.AntiForgeryToken()
        <input asp-for="Id" type="hidden" />

        <div class="form-section">
            <h3 class="section-title"><i class="fas fa-tag me-2"></i>Allgemeine Angaben</h3>

            <div class="mb-3">
                <label asp-for="Text" class="form-label">Schl端sselbegriff</label>
                <input asp-for="Text" class="form-control" placeholder="z. B. KI-Assistent, Infografik" autofocus />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex justify-content-end mt-3 gap-2 flex-wrap mb-3">
            <a asp-action="Index" class="btn btn-secondary">Abbrechen</a>
            <button type="submit" class="btn btn-primary"><i class="bi bi-check-lg me-1"></i> Speichern</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
