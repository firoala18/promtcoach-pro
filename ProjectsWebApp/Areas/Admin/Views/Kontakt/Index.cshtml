@model IEnumerable<KontaktCard>
@{
    ViewData["Title"] = "Kontakt-Karten-Managment";
}
<div class="mt-5">
    <div class="d-flex justify-content-between mb-3">
        <h2>Kontakt-Karten verwalten</h2>
        <a href="@Url.Action("Upsert", "Kontakt")" class="btn" style="background:black;color:white;">
            <i class="fas fa-plus"></i> Kontakt Karte hinzufügen
        </a>
    </div>

    <div id="sortable" class="list-group">
        @foreach (var item in Model.OrderBy(k => k.DisplayOrder))
        {
            <div class="list-group-item d-flex justify-content-between align-items-center" data-id="@item.Id">
                <div class="d-flex align-items-center">
                    <i class="bi bi-grip-vertical handle me-3" style="cursor: move;"></i>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" style="height: 60px; width: 100px; object-fit: cover;" class="me-3">
                    }
                    <div>
                        <h5 class="mb-1">@item.Name</h5>
                        @if (!string.IsNullOrEmpty(item.Funktion))
                        {
                            <small>@item.Funktion</small>
                        }
                    </div>
                </div>
                <div>
                    <a href="@Url.Action("Upsert", "Kontakt", new { id = item.Id })"
                       class="btn btn-warning me-2">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <button class="btn btn-danger delete-card" data-id="@item.Id">
                        <i class="bi bi-trash-fill"></i>
                    </button>
                </div>
            </div>
        }
    </div>
    <div class="d-flex justify-content-between mb-3 mt-3">
        <h2> </h2>
        <a href="@Url.Action("Upsert", "Kontakt")" class="btn" style="background:black;color:white;">
            <i class="fas fa-plus"></i> Kontakt Karte hinzufügen
        </a>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $("#sortable").sortable({
                handle: ".handle",
                update: function () {
                    const ids = [];
                    $("#sortable .list-group-item").each(function () {
                        ids.push(parseInt($(this).data("id")));
                    });

                    $.post("@Url.Action("UpdateOrder", "Kontakt")", { ids: ids })
                        .fail(function () {
                            alert("Error updating order");
                        });
                }
            }).disableSelection();

            $(".delete-card").click(function () {
                const cardId = $(this).data("id");
                Swal.fire({
                    title: 'Are you sure?',
                    text: "This action cannot be undone!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete!',
                    cancelButtonText: 'Cancel'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.post("@Url.Action("Delete", "Kontakt")/?id=" + cardId)
                            .done(function () {
                                location.reload();
                            })
                            .fail(function () {
                                Swal.fire('Error!', 'Deletion failed', 'error');
                            });
                    }
                });
            });
        });
    </script>
}
