@model SliderItem

<div class="mt-5">
    <h2>
        @if (Model.IsForVirtuellesKlassenzimmer)
        {
            @(Model.Id == 0 ? "Neues Slide für XR Lab hinzufügen" : "Slide für XR Lab bearbeiten")
        }
        else
        {
            @(Model.Id == 0 ? "Neues Slide für Projekte hinzufügen" : "Slide für Projekte bearbeiten")
        }
    </h2>

    <form asp-action="Upsert" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ImageUrl" />
        <input type="hidden" asp-for="IsForVirtuellesKlassenzimmer" />

        <div class="form-group mt-3">
            <label asp-for="Title">Titel</label>
            <input asp-for="Title" class="form-control" placeholder="Titel eingeben" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Description">Beschreibung</label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Beschreibung eingeben"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="ImageFile">Bild hochladen (Empfohlen: 2268 x 907 Pixel)</label>
            <input type="file" asp-for="ImageFile" class="form-control" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>

            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" class="mt-3 img-fluid" style="max-height: 200px;" alt="Vorschau" />
            }
        </div>

        <div class="mt-4 text-center">
            <button type="submit" class="btn btn-success px-5">Speichern</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
