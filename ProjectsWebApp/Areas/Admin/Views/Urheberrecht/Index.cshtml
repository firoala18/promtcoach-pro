@model IEnumerable<UrheberrechtContent>
@{
    ViewData["Title"] = "Urheberrecht-Managment";
}

<div class="mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Urheberrecht Inhalte verwalten</h2>
        <a href="@Url.Action("Upsert", "Urheberrecht", new { area = "Admin" })" class="btn" style="background:black;color:white;">
            <i class="fas fa-plus"></i> Inhalt
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width: 8%;">#</th>
                    <th style="width: 20%;">Sektionstyp</th>
                    <th>Titel</th>
                    <th style="width: 20%;">Aktionen</th>
                </tr>
            </thead>
            <tbody id="sortable">
                @foreach (var item in Model.OrderBy(m => m.DisplayOrder).Select((content, index) => new { Content = content, Index = index }))
                {
                    <tr class="sortable-row" data-id="@item.Content.Id">
                        <td class="text-center">
                            <span class="badge bg-info">@((item.Index + 1))</span>
                            <i class="bi bi-grip-vertical handle ms-2" style="cursor: move;"></i>
                        </td>
                        <td>@item.Content.SectionType</td>
                        <td class="fw-bold">@item.Content.Title</td>
                        <td class="text-center">
                            <div class="d-inline-flex justify-content-center gap-2 actions-wrap">
                                <a href="@Url.Action("Upsert", "Urheberrecht", new { area = "Admin", id = item.Content.Id })" class="btn btn-warning">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <button class="btn btn-danger delete-content" data-id="@item.Content.Id">
                                    <i class="bi bi-trash-fill"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2></h2>
        <a href="@Url.Action("Upsert", "Urheberrecht", new { area = "Admin" })" class="btn" style="background:black;color:white;">
            <i class="fas fa-plus"></i> Inhalt
        </a>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $("#sortable").sortable({
                handle: ".handle",
                update: function () {
                    const ids = [];
                    $("#sortable .sortable-row").each(function (index) {
                        ids.push(parseInt($(this).data("id")));
                        $(this).find(".badge").text(index + 1);
                    });

                    $.post('@Url.Action("UpdateOrder", "Urheberrecht", new { area = "Admin" })', { ids: ids })
                        .done(() => location.reload())
                        .fail(() => alert("Fehler beim Aktualisieren der Reihenfolge."));
                }
            }).disableSelection();

            $(document).on('click', '.delete-content', function () {
                const id = $(this).data("id");
                if (confirm('Bist du sicher, dass du löschen möchtest?')) {
                    $.post('@Url.Action("Delete", "Urheberrecht", new { area = "Admin" })', { id })
                        .done(() => location.reload());
                }
            });
        });
    </script>
}
