@model ProjectsWebApp.Areas.Admin.Models.SiteUsersAllViewModel

@{
    ViewData["Title"] = ViewData["Title"] ?? "Alle Teilnehmende";
}

<div class="container-fluid mt-4 mb-5">
    <div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mb-4">
        <div>
            <h2 class="mb-1 fw-bold text-dark">Alle Teilnehmende</h2>
            @* <p class="text-muted mb-0">Alle Teilnehmenden, ohne Gruppierung.</p> *@
        </div>

     
    </div>

    @if (TempData["success"] is string success && !string.IsNullOrWhiteSpace(success))
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@success
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["error"] is string error && !string.IsNullOrWhiteSpace(error))
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@error
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body p-3">
            <form method="get" asp-action="All" class="row g-3 align-items-center">
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0"><i class="bi bi-search text-muted"></i></span>
                        <input type="text" name="searchString" value="@Model.SearchString" class="form-control border-start-0 border-end-0 bg-light" placeholder="Suchen nach Benutzernamen oder E-Mail..." aria-label="Search">
                        @if (!string.IsNullOrEmpty(Model.SearchString))
                        {
                            <a asp-action="All" class="input-group-text bg-light border-start-0 text-decoration-none" title="Suche löschen">
                                <i class="bi bi-x-lg text-muted"></i>
                            </a>
                        }
                    </div>
                </div>
                <div class="col-md-2 d-grid">
                    <button type="submit" class="btn btn-dark">Suchen</button>
                </div>
            </form>
        </div>
    </div>

    @if (Model?.Users == null || Model.Users.Count == 0)
    {
        <div class="text-center py-5">
            <div class="mb-3">
                <i class="bi bi-people text-muted" style="font-size: 3rem;"></i>
            </div>
            <h4 class="text-muted">Keine Benutzer gefunden</h4>
            <p class="text-muted">Versuchen Sie es mit einem anderen Suchbegriff oder setzen Sie den Filter zurück.</p>
            @if (!string.IsNullOrWhiteSpace(Model?.SearchString))
            {
                <a asp-action="All" class="btn btn-outline-secondary">Suche zurücksetzen</a>
            }
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="list-group list-group-flush">
                @foreach (var u in Model.Users)
                {
                    <div class="list-group-item bg-transparent d-flex align-items-center justify-content-between gap-3 px-4 py-3">
                        <div class="d-flex align-items-center gap-3">
                            <div class="avatar-circle bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                <i class="bi bi-person-fill"></i>
                            </div>
                            <div class="text-truncate">
                                <span class="d-block fw-medium text-dark">@u.Email</span>
                                <small class="text-muted">ID: @u.Id</small>
                            </div>
                        </div>

                        <form asp-area="Admin" asp-controller="SiteUsers" asp-action="DeleteUser" method="post" class="delete-form">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="userId" value="@u.Id" />
                            <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                            <button type="submit" class="btn btn-sm btn-danger text-light border-0 " data-confirm-message="Möchten Sie den Benutzer '@u.Email' wirklich löschen?">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </div>
                }
            </div>
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Page navigation" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link border-0 shadow-sm rounded-start" asp-action="All" asp-route-pageNumber="@(Model.CurrentPage - 1)" asp-route-searchString="@Model.SearchString">
                            <i class="bi bi-chevron-left"></i> Zurück
                        </a>
                    </li>

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        if (i == 1 || i == Model.TotalPages || (i >= Model.CurrentPage - 2 && i <= Model.CurrentPage + 2))
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link border-0 shadow-sm mx-1 rounded" asp-action="All" asp-route-pageNumber="@i" asp-route-searchString="@Model.SearchString">@i</a>
                            </li>
                        }
                        else if (i == Model.CurrentPage - 3 || i == Model.CurrentPage + 3)
                        {
                            <li class="page-item disabled"><span class="page-link border-0 bg-transparent">...</span></li>
                        }
                    }

                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link border-0 shadow-sm rounded-end" asp-action="All" asp-route-pageNumber="@(Model.CurrentPage + 1)" asp-route-searchString="@Model.SearchString">
                            Weiter <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>

<style>
    .hover-danger:hover {
        background-color: #dc3545 !important;
        color: white !important;
    }

    .page-link {
        color: var(--bs-primary);
    }

    .page-item.active .page-link {
        background-color: var(--bs-primary);
        border-color: var(--bs-primary);
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const deleteForms = document.querySelectorAll('.delete-form');

        deleteForms.forEach(form => {
            form.addEventListener('submit', function (e) {
                e.preventDefault();
                const button = this.querySelector('button[type="submit"]');
                const message = button.getAttribute('data-confirm-message') || 'Sind Sie sicher?';

                Swal.fire({
                    title: 'Bestätigung',
                    text: message,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Ja, löschen!',
                    cancelButtonText: 'Abbrechen'
                }).then((result) => {
                    if (result.isConfirmed) {
                        this.submit();
                    }
                });
            });
        });
    });
</script>
