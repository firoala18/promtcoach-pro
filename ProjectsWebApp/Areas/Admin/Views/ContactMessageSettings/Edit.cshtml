@model ContactMessageSetting
@{
    ViewData["Title"] = "Kontakt-Nachricht-Managment";
}

<h2>Kontakt-Nachricht bearbeiten</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-area="Admin"
      asp-controller="ContactMessageSettings"
      asp-action="Edit"
      method="post">

    @*  ── verborgene Id ── *@
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Message" class="form-label"><strong>Nachricht</strong></label>
        <textarea asp-for="Message"
                  class="form-control"
                  rows="4"></textarea>
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>

