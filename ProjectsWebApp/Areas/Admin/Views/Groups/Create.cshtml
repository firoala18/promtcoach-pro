@model ProjectsWebApp.Areas.Admin.Models.GroupEditViewModel
@{
    ViewData["Title"] = "Neuer Raum";
}

<h2 class="mb-3">Neuen Raum erstellen</h2>

<form asp-area="Admin" asp-controller="Groups" asp-action="Create" method="post" class="mt-3">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Besitzer:innen</label>
        <div class="border rounded p-2" style="max-height:220px; overflow:auto;">
            @if (Model.OwnerOptions != null && Model.OwnerOptions.Count > 0)
            {
                foreach (var opt in Model.OwnerOptions)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="SelectedOwnerIds" value="@opt.UserId" @(opt.IsSelected ? "checked" : null) />
                        <label class="form-check-label">@opt.DisplayName</label>
                    </div>
                }
            }
            else
            {
                <p class="text-muted mb-0">Keine geeigneten Benutzer f√ºr Besitzer:innen gefunden.</p>
            }
        </div>
    </div>

    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Speichern</button>
        <a asp-area="Admin" asp-controller="Groups" asp-action="Index" class="btn btn-secondary">Abbrechen</a>
    </div>
</form>
