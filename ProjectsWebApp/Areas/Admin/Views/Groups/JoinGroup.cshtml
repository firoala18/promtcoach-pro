@model ProjectsWebApp.Areas.Admin.Models.JoinGroupAdminViewModel
@{
    ViewData["Title"] = "Weiterem Raum beitreten";
}

<div class="container-fluid py-4">
    <div class="zurueck-container">
        <a asp-area="Admin" asp-controller="Groups" asp-action="Index" class="btn-zurueck">
            <i class="bi bi-arrow-left"></i>
            <span>Zurück</span>
        </a>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header border-0 rounded-top-4" style="background:#89ba17;color:#ffffff;">
                    <h2 class="h5 mb-0">Weiterem Raum beitreten</h2>
                </div>
                <div class="card-body">
                    <p class="text-muted">
                        Geben Sie einen Einladungscode ein, den Sie von einem Raum erhalten haben. Der Code ordnet Ihr Konto diesem Raum zu.
                    </p>

                    <form asp-area="Admin" asp-controller="Groups" asp-action="JoinGroup" method="post" class="mt-3">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label asp-for="InviteCode" class="form-label"></label>
                            <input asp-for="InviteCode" class="form-control" autocomplete="off" />
                            <span asp-validation-for="InviteCode" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn" style="background-color:#89ba17;border-color:#89ba17;color:#ffffff;">
                                Beitreten
                            </button>
                        </div>
                    </form>


                    @if (TempData["success"] != null)
                    {
                        <div class="alert alert-success mt-3 mb-0">@TempData["success"]</div>
                    }
                    @if (TempData["error"] != null)
                    {
                        <div class="alert alert-danger mt-3 mb-0">@TempData["error"]</div>
                    }
                </div>
            </div>

            @if (Model.MemberGroups != null && Model.MemberGroups.Count > 0)
            {
                <div class="card border-0 shadow-sm rounded-4 mt-3">
                    <div class="card-body">
                        <h5 class="h6">Ihre bestehenden Räume</h5>
                        <ul class="list-unstyled mb-0">
                            @foreach (var g in Model.MemberGroups)
                            {
                                <li class="mb-2">
                                    <a asp-area="Admin" asp-controller="Groups" asp-action="Details" asp-route-id="@g.Id"
                                       class="text-decoration-none d-flex align-items-center">
                                        <i class="bi bi-people me-2 text-muted"></i>
                                        <span>@g.Name</span>
                                        <i class="bi bi-chevron-right ms-auto text-muted small"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
