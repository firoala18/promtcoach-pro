@model ProjectsWebApp.Models.Project

@{
    ViewData["Title"] = "Projekt löschen";
}

<div class="mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-danger text-white">
                    <h3 class="text-center">Löschung bestätigen</h3>
                </div>
                <div class="card-body text-center">
                    <p class="text-muted">das Projekt <strong>@Model.Title</strong> löschen? Diese Aktion kann nicht rückgängig gemacht werden.</p>
                   
                    <form asp-action="Delete" method="post">
                        <!-- Changed to 'Delete' instead of 'DeletePOST' -->
                        @Html.AntiForgeryToken() <!-- CSRF token for security -->
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-around">
                            <button type="submit" class="btn btn-danger w-45">
                                <i class="fas fa-trash-alt"></i> Bestätigen
                            </button>
                            <a href="@Url.Action("Index", "Project", new { area = "Admin" })" class="btn btn-secondary w-45">
                                <i class="fas fa-arrow-left"></i> abbrechen
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
