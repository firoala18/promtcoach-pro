@model IEnumerable<ProjectsWebApp.Models.TechAnforderung>

@{
    ViewData["Title"] = "Technik bearbeiten";
}

<div class="mt-5">
    <div class="row">
        <div class="col-12">

            <h3 class="text-center mb-4">@ViewData["Title"]</h3>
            <div class="d-flex justify-content-end mb-3">
                <a href="@Url.Action("Create", "TechAnforderung", new { area = "Admin" })" class="btn btn-primary addBtn">
                    <i class="fas fa-plus"></i>
                </a>
            </div>

            <table class="table table-bordered table-hover shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>Technik</th>
                        <th style="width: 150px;">Aktionen</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var TechAnforderung in Model.OrderBy(u => u.DisplayOrder))
                    {
                        <tr>
                            <td>@TechAnforderung.Name</td>
                            <td>
                                <div class="d-flex justify-content-between">
                                    <a href="@Url.Action("Edit", "TechAnforderung", new { id = TechAnforderung.Id, area = "Admin" })" class="btn btn-warning rounded-5 mx-1">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", "TechAnforderung", new { id = TechAnforderung.Id, area = "Admin" })" class="btn btn-danger rounded-5 mx-1">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
