@page
@model LockoutModel
@{
    ViewData["Title"] = "Konto gesperrt";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="card shadow-lg border-0" style="max-width: 500px; width: 100%; border-radius: 1rem;">
        <div class="card-body text-center p-5">
            <div class="mb-4">
                <div class="d-inline-flex align-items-center justify-content-center bg-danger bg-opacity-10 text-danger rounded-circle" style="width: 80px; height: 80px;">
                    <i class="fas fa-lock fa-3x"></i>
                </div>
            </div>

            <h2 class="card-title fw-bold mb-3">@ViewData["Title"]</h2>

            @if (Model.IsManualLockout)
            {
                <p class="card-text text-muted mb-4">
                    Ihr Konto wurde nach mehreren fehlgeschlagenen Anmeldeversuchen vollständig gesperrt.
                    Bitte wenden Sie sich an den Support, um Ihr Konto zu reaktivieren.
                </p>
            }
            else
            {
                <p class="card-text text-muted mb-4">
                    Ihr Konto wurde wegen zu vieler falscher Anmeldeversuche vorübergehend gesperrt.
                    Bitte warten Sie ein paar Minuten und versuchen Sie es danach erneut.
                </p>
            }

            @if (!string.IsNullOrWhiteSpace(Model.SupportEmail))
            {
                <div class="d-grid gap-2 mb-3">
                    <a href="mailto:@Model.SupportEmail" class="btn btn-outline-danger">
                        <i class="bi bi-envelope me-2"></i> Support kontaktieren
                    </a>
                </div>
            }

            <div class="mt-4">
                <a asp-area="" asp-controller="Home" asp-action="Home" class="btn-zurueck">
                    <i class="bi bi-arrow-left"></i>Zurück zur Startseite
                </a>
            </div>
        </div>
    </div>
</div>
