@* @page
@model ProjectsWebApp.Areas.Identity.Pages.Account.Manage.JoinGroupModel
@{
    ViewData["Title"] = "Weiterer Gruppe beitreten";
}

<div class="py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header border-0 rounded-top-4" style="background:linear-gradient(90deg,#bbf7d0,#e0f2fe);">
                    <h2 class="h5 mb-0">Weiterer Gruppe beitreten</h2>
                </div>
                <div class="card-body">
                    <p class="text-muted">
                        Gib einen Einladungscode ein, den du von einer Gruppe erhalten hast. Der Code ordnet dein Konto dieser Gruppe zu.
                    </p>

                    <form method="post" class="mt-3">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label class="form-label" for="InviteCode">Einladungscode</label>
                            <input asp-for="Input.InviteCode" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Input.InviteCode" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-success">Beitreten</button>
                    </form>

                    @if (TempData["success"] != null)
                    {
                        <div class="alert alert-success mt-3 mb-0">@TempData["success"]</div>
                    }
                    @if (TempData["error"] != null)
                    {
                        <div class="alert alert-danger mt-3 mb-0">@TempData["error"]</div>
                    }
                </div>
            </div>

            @if (Model.MemberGroups != null && Model.MemberGroups.Count > 0)
            {
                <div class="card border-0 shadow-sm rounded-4 mt-3">
                    <div class="card-body">
                        <h5 class="h6">Deine bestehenden Gruppen</h5>
                        <ul class="mb-0">
                            @foreach (var g in Model.MemberGroups)
                            {
                                <li>@g</li>
                            }
                        </ul>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
 *@