            const syncSpacer = () => {
                if (spacer) {
                    const target = body.querySelector('table');
                    const width = target ? target.scrollWidth : body.scrollWidth;
                    spacer.style.width = width + 'px';
                }
                updateHint();
            };

            const syncScroll = () => {
                top.scrollLeft = body.scrollLeft;
            };

            syncSpacer();
            syncScroll();
            updateHint();

            let raf = null;
            const req = (cb) => {
