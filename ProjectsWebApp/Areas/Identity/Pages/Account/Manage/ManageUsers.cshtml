            const matchesGroup = !selectedGroup || groupName === selectedGroup;
            let hasVisibleUsers = false;

            groupCard.querySelectorAll('tbody tr.user-row').forEach(row => {
                const email = (row.getAttribute('data-email') || '').toLowerCase();
                const matchesSearch = !searchTerm || email.includes(searchTerm);
                const isVisible = matchesSearch && matchesGroup;

                row.style.display = isVisible ? '' : 'none';
                if (isVisible) hasVisibleUsers = true;
            });

            groupCard.style.display = hasVisibleUsers ? '' : 'none';

            // Auto-expand filtered groups
            if (hasVisibleUsers && searchTerm) {
                groupCard.classList.add('expanded');
            }
        });
    }

    document.getElementById('userSearch')?.addEventListener('input', applyFilters);
    document.getElementById('groupFilter')?.addEventListener('change', applyFilters);

    // Count statistics on page load
    document.addEventListener('DOMContentLoaded', function() {
        let totalUsers = 0;
        let adminCount = 0;
        let dozentCount = 0;

        document.querySelectorAll('.user-row').forEach(row => {
            totalUsers++;
            const roleSelect = row.querySelector('.role-select');
            const roleBadge = row.querySelector('.badge');

            if (roleSelect) {
                const selectedRole = roleSelect.value;
                if (selectedRole === 'SuperAdmin' || selectedRole === 'Admin') adminCount++;
                if (selectedRole === 'Dozent') dozentCount++;
            } else if (roleBadge) {
                const roleText = roleBadge.textContent;
                if (roleText === 'Administrator' || roleText === 'Coach') adminCount++;
                if (roleText === 'Dozent') dozentCount++;
            }
        });

        document.getElementById('totalUsersCount').textContent = totalUsers;
        document.getElementById('adminCount').textContent = adminCount;
        document.getElementById('dozentCount').textContent = dozentCount;
    });
</script>
 