@page
@model ProjectsWebApp.Areas.Identity.Pages.Account.Manage.ManageUsersModel
@{
    ViewData["Title"] = "Benutzer verwalten";
    var isSuperUser = User.IsInRole("SuperAdmin");
    var isCoachUser = User.IsInRole("Admin");
    var isDozentUser = User.IsInRole("Dozent");
}

@* <style>
    /* Modern Color Scheme */
    :root {
        --primary-color: #89ba17;
        --primary-hover: #76a114;
        --primary-light: #f4f9e8;
        --primary-dark: #5d7f0f;
