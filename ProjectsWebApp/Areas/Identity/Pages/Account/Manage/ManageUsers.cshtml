            const spacer = wrapper.querySelector('.table-scrollbar-spacer');
            const hint = wrapper.querySelector('.table-scroll-hint');
            if (!top || !body) return;

            const updateHint = () => {
                if (!hint) return;
                const target = body.querySelector('table');
                const scrollWidth = target ? target.scrollWidth : body.scrollWidth;
                const clientWidth = body.clientWidth;
                const maxScroll = scrollWidth - clientWidth;
                if (maxScroll > 4 && body.scrollLeft < maxScroll - 4) {
                    hint.style.display = 'flex';
                } else {
                    hint.style.display = 'none';
                }
