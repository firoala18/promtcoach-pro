<!-- Role Group Modal -->
<div id="roleGroupModal" class="position-fixed top-0 start-0 w-100 h-100" style="background:rgba(0,0,0,.4);display:none;z-index:1080;">
    <div class="container" style="max-width:480px; margin:10vh auto;">
        <div class="card pc-card">
            <div class="card-header fw-semibold d-flex justify-content-between align-items-center">
                <span>Rolle und Gruppe zuweisen</span>
                <button type="button" class="btn btn-sm btn-outline-secondary" onclick="closeRoleGroupModal()">Schließen</button>
            </div>
            <div class="card-body">
                <form method="post" asp-page-handler="UpdateStatusWithGroup" id="roleGroupForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="roleGroupEmail" name="UpdateStatusEmail" />
                    <input type="hidden" id="roleGroupRole" name="UpdateStatusRole" />
                    <div class="mb-3">
                        <label class="form-label">Anwender</label>
                        <input type="text" class="form-control" id="roleGroupEmailDisplay" disabled />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Gruppe</label>
                        @if (Model.AllGroups.Any())
                        {
                            <select class="form-select" name="UpdateStatusGroup" id="roleGroupSelect" required>
                                <option value="">Bitte Gruppe auswählen...</option>
                                @foreach (var g in Model.AllGroups)
                                {
                                    <option value="@g">@g</option>
                                }
                            </select>
                        }
                        else
                        {
                            <div class="alert alert-warning mb-0">Es sind noch keine Gruppen definiert. Bitte legen Sie zuerst eine Gruppe an.</div>
                        }
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn-modern btn-modern-primary" @(Model.AllGroups.Any() ? null : "disabled")>
                            <i class="bi bi-check2"></i>
                            Speichern
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function openRoleGroupModal(email, role) {
        var modal = document.getElementById('roleGroupModal');
        if (!modal) return;
        var emailHidden = document.getElementById('roleGroupEmail');
        var emailDisplay = document.getElementById('roleGroupEmailDisplay');
        var roleHidden = document.getElementById('roleGroupRole');
        var groupSelect = document.getElementById('roleGroupSelect');
        if (emailHidden) emailHidden.value = email;
        if (emailDisplay) emailDisplay.value = email;
        if (roleHidden) roleHidden.value = role;
        if (groupSelect) groupSelect.selectedIndex = 0;
        modal.style.display = 'block';
    }

    function closeRoleGroupModal() {
        var modal = document.getElementById('roleGroupModal');
        if (modal) modal.style.display = 'none';
    }

    // Show loading overlay
    function showLoading() {
        document.getElementById('loadingOverlay').style.display = 'flex';
    }

    // Confirm delete
    function confirmDelete(email) {
        return confirm(`Sind Sie sicher, dass Sie den Benutzer "${email}" entfernen möchten? Diese Aktion kann nicht rückgängig gemacht werden.`);
    }

    // Add form validation
    document.getElementById('addAdminForm')?.addEventListener('submit', function(e) {
        const password = document.getElementById('adminPassword').value;
        if (password.length < 6) {
            e.preventDefault();
            alert('Das Passwort muss mindestens 6 Zeichen lang sein.');
            return false;
        }
        showLoading();
    });

    // Role/group form: show loading on submit
    document.getElementById('roleGroupForm')?.addEventListener('submit', function () {
        showLoading();
    });

    // Add animation to stats on page load
    document.addEventListener('DOMContentLoaded', function() {
        const statValues = document.querySelectorAll('.stat-overview-value');
        statValues.forEach(stat => {
            const finalValue = parseInt(stat.textContent);
            let currentValue = 0;
            const increment = Math.ceil(finalValue / 20);
            const timer = setInterval(() => {
                currentValue += increment;
                if (currentValue >= finalValue) {
                    currentValue = finalValue;
                    clearInterval(timer);
                }
                stat.textContent = currentValue;
            }, 50);
        });
    });

    // Auto-hide alerts after 5 seconds
    setTimeout(() => {
        document.querySelectorAll('.alert-modern').forEach(alert => {
            alert.style.animation = 'slideOut 0.3s ease forwards';
            setTimeout(() => alert.remove(), 300);
        });
    }, 5000);

    @if (TempData["success"] != null || TempData["error"] != null)
    {
            <text>
            // Scroll to top when there's a message
            window.scrollTo({ top: 0, behavior: 'smooth' });
            </text>
    }
</script>

<style>
    @@keyframes slideOut {
        to {
            opacity: 0;
            transform: translateY(-10px);
        }
    }
</style>
