@model ProjectsWebApp.Areas.Identity.Pages.Account.Manage.ManageAdminsModel
@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Admins verwalten";
    ViewData["ActivePage"] = ManageNavPages.ManageAdmins;
    var isSuperUser = User.IsInRole("SuperAdmin");
    var isCoachUser = User.IsInRole("Admin");
    var isDozentUser = User.IsInRole("Dozent");

    // Split AdminUsers into high-level admins and dozenten
    var highAdmins = new List<IdentityUser>();
    var dozenten = new List<IdentityUser>();
    foreach (var admin in Model.AdminUsers)
    {
        var isSuper_split = await Model.UserManager.IsInRoleAsync(admin, "SuperAdmin");
        var isAdmin_split = await Model.UserManager.IsInRoleAsync(admin, "Admin");
        var isDozent_split = await Model.UserManager.IsInRoleAsync(admin, "Dozent");
        var isApiManager_split = await Model.UserManager.IsInRoleAsync(admin, "ApiManager");

        if (isSuper_split || isAdmin_split || isApiManager_split)
        {
            highAdmins.Add(admin);
        }
        else if (isDozent_split)
        {
            dozenten.Add(admin);
        }
    }
}

