    @if ((isSuperUser || isCoachUser) && !isDozentUser)
    {
        <!-- Statistics Overview -->
        @*         <div class="stats-overview">
            <div class="stat-overview-card">
                <div class="stat-icon-wrapper">
                    <i class="bi bi-person-badge"></i>
                </div>
                <div class="stat-overview-label">Administratoren</div>
