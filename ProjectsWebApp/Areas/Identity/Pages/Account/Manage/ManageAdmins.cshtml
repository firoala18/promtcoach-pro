<script>
    // Pagination state
    var paginationState = {
        highAdmins: { page: 1, perPage: 10 },
        dozenten: { page: 1, perPage: 10 }
    };

    function initPagination(tableId) {
        var table = document.getElementById(tableId + 'Table');
        if (!table) return;
        var rows = table.querySelectorAll('tbody tr.paginated-row');
        if (rows.length <= 10) return; // No pagination needed
        updatePagination(tableId);
    }

    function updatePagination(tableId) {
        var table = document.getElementById(tableId + 'Table');
        if (!table) return;
        var rows = table.querySelectorAll('tbody tr.paginated-row');
        var state = paginationState[tableId];
        var totalRows = rows.length;
        var totalPages = Math.ceil(totalRows / state.perPage);
        var start = (state.page - 1) * state.perPage;
        var end = start + state.perPage;

        // Show/hide rows
        rows.forEach(function(row, i) {
            row.style.display = (i >= start && i < end) ? '' : 'none';
        });

        // Update info
        var infoEl = document.getElementById(tableId + 'Info');
        if (infoEl) {
            var showStart = Math.min(start + 1, totalRows);
            var showEnd = Math.min(end, totalRows);
            infoEl.textContent = showStart + '–' + showEnd + ' von ' + totalRows;
        }

        // Update page buttons
        var pagesEl = document.getElementById(tableId + 'Pages');
        if (pagesEl) {
            var html = '';
            for (var p = 1; p <= totalPages; p++) {
                html += '<button type="button" class="pagination-btn ' + (p === state.page ? 'active' : '') + '" onclick="goToPage(\'' + tableId + '\', ' + p + ')">' + p + '</button>';
            }
            pagesEl.innerHTML = html;
        }
    }

    function changePage(tableId, delta) {
        var table = document.getElementById(tableId + 'Table');
        if (!table) return;
        var rows = table.querySelectorAll('tbody tr.paginated-row');
        var state = paginationState[tableId];
        var totalPages = Math.ceil(rows.length / state.perPage);
        var newPage = state.page + delta;
        if (newPage >= 1 && newPage <= totalPages) {
            state.page = newPage;
            updatePagination(tableId);
        }
    }

    function goToPage(tableId, page) {
        paginationState[tableId].page = page;
        updatePagination(tableId);
    }

    // Initialize pagination on page load
    document.addEventListener('DOMContentLoaded', function() {
        initPagination('highAdmins');
        initPagination('dozenten');
    });

    function openRoleGroupModal(email, role) {
        var modal = document.getElementById('roleGroupModal');
        if (!modal) return;
        var emailHidden = document.getElementById('roleGroupEmail');
        var emailDisplay = document.getElementById('roleGroupEmailDisplay');
        var roleHidden = document.getElementById('roleGroupRole');
        var groupSelect = document.getElementById('roleGroupSelect');
        var requiredLabel = document.getElementById('roleGroupRequiredLabel');
        var hintEl = document.getElementById('roleGroupHint');

        if (emailHidden) emailHidden.value = email;
        if (emailDisplay) emailDisplay.value = email;
        if (roleHidden) roleHidden.value = role;
        if (groupSelect) groupSelect.selectedIndex = 0;

        // Group is required only for User role (Student/Benutzer)
        var isUserRole = role === 'User' || role.startsWith('User|');
        if (groupSelect) {
            if (isUserRole) {
                groupSelect.setAttribute('required', 'required');
            } else {
                groupSelect.removeAttribute('required');
            }
        }
        if (requiredLabel) {
            requiredLabel.style.display = isUserRole ? 'inline' : 'none';
        }
        if (hintEl) {
            hintEl.style.display = isUserRole ? 'none' : 'block';
        }

        modal.style.display = 'block';
    }

    function closeRoleGroupModal() {
        var modal = document.getElementById('roleGroupModal');
        if (modal) modal.style.display = 'none';
    }

    // Show loading overlay
    function showLoading() {
        document.getElementById('loadingOverlay').style.display = 'flex';
    }

    // Confirm delete
    function confirmDelete(email) {
        return confirm(`Sind Sie sicher, dass Sie den Benutzer "${email}" entfernen möchten? Diese Aktion kann nicht rückgängig gemacht werden.`);
    }

    // Add form validation
    document.getElementById('addAdminForm')?.addEventListener('submit', function(e) {
        const password = document.getElementById('adminPassword').value;
        if (password.length < 6) {
            e.preventDefault();
            alert('Das Passwort muss mindestens 6 Zeichen lang sein.');
            return false;
        }
        showLoading();
    });

    // Role/group form: show loading on submit
    document.getElementById('roleGroupForm')?.addEventListener('submit', function () {
        showLoading();
    });

    // Add animation to stats on page load
    document.addEventListener('DOMContentLoaded', function() {
        const statValues = document.querySelectorAll('.stat-overview-value');
        statValues.forEach(stat => {
            const finalValue = parseInt(stat.textContent);
            let currentValue = 0;
            const increment = Math.ceil(finalValue / 20);
            const timer = setInterval(() => {
                currentValue += increment;
                if (currentValue >= finalValue) {
                    currentValue = finalValue;
                    clearInterval(timer);
                }
                stat.textContent = currentValue;
            }, 50);
        });
    });

    // Auto-hide alerts after 5 seconds
    setTimeout(() => {
        document.querySelectorAll('.alert-modern').forEach(alert => {
            alert.style.animation = 'slideOut 0.3s ease forwards';
            setTimeout(() => alert.remove(), 300);
        });
    }, 5000);

    @if (TempData["success"] != null || TempData["error"] != null)
    {
            <text>
            // Scroll to top when there's a message
            window.scrollTo({ top: 0, behavior: 'smooth' });
            </text>
    }
</script>

