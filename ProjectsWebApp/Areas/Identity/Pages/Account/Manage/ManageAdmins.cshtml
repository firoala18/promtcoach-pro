                <div class="stat-overview-label">Dozenten</div>
                <div class="stat-overview-value">@Model.AdminUsers.Count(u => Model.UserManager.IsInRoleAsync(u, "Dozent").Result && !Model.UserManager.IsInRoleAsync(u, "SuperAdmin").Result)</div>
                <div class="stat-overview-change">Gruppenverwaltung</div>
