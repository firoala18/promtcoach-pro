@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Zugriff verweigert";
}

<style>
    .access-denied-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        height: 100vh;
        color: #ff4c4c;
        background-color: #f9f9f9;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        animation: fadeIn 0.8s ease-in-out;
    }

    .access-denied-icon {
        font-size: 5rem;
        margin-bottom: 1rem;
    }

    .access-denied-title {
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .access-denied-message {
        font-size: 1.2rem;
        color: #555;
        max-width: 500px;
    }

    .access-denied-back {
        margin-top: 2rem;
    }

    /* Uses global .btn-zurueck with custom hover color for error context */
    .access-denied-back .btn-zurueck:hover {
        background-color: #ff4c4c;
        border-color: #ff4c4c;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="access-denied-container">
    <div class="access-denied-icon">
        <i class="fas fa-lock"></i>
    </div>
    <div class="access-denied-title">Zugriff verweigert</div>
    <div class="access-denied-message">
        Du hast keine Berechtigung, auf diese Seite zuzugreifen.<br />
        Bitte wende dich an einen Administrator, falls du glaubst, dass es sich um einen Fehler handelt.
    </div>
    <div class="access-denied-back">
        <a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn-zurueck">
            <i class="bi bi-arrow-left"></i>Zurück zum Profil
        </a>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
