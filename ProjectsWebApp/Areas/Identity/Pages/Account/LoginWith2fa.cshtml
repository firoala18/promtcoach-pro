@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Zwei-Faktor-Authentifizierung";
}

<!-- —————————————————  STYLES  ————————————————— -->
<style>
    .login-shell {
        min-height: 90vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .card-login {
        width: 420px;
        background: #fff;
        border-radius: 18px;
        padding: 32px 36px;
        box-shadow: 0 15px 40px rgba(0,0,0,.08);
        font-family: system-ui, -apple-system, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    }

        .card-login h2 {
            font-weight: 700;
            margin-bottom: 8px;
            text-align: center;
        }

        .card-login p.lead {
            text-align: center;
            font-size: 0.95rem;
            color: #666;
            margin-bottom: 24px;
        }

    .input-wrap {
        display: flex;
        align-items: center;
        height: 48px;
        border: 1.5px solid #e5e7eb;
        border-radius: 12px;
        padding: 0 14px;
        transition: .18s;
    }

        .input-wrap:focus-within {
            border-color: #3388ff;
            box-shadow: 0 0 0 2px rgba(51,136,255,.25);
        }

        .input-wrap svg,
        .input-wrap .bi {
            flex: 0 0 20px;
            fill: #a8acb2;
            font-size: 1.2rem;
        }

        .input-wrap input {
            border: 0;
            outline: none;
            flex: 1;
            height: 100%;
            padding-left: 10px;
            background: transparent;
        }

    .note {
        text-align: center;
        font-size: .9rem;
        margin: 20px 0 6px;
    }

    .btn-primary-lg {
        background: #151717;
        border: 0;
        width: 100%;
        height: 48px;
        border-radius: 12px;
        color: #fff;
        font-weight: 600;
        margin-top: 10px;
    }

        .btn-primary-lg:hover {
            background: #23272a;
        }

    .form-check-input {
        margin-top: 0.3rem;
    }
</style>

<!-- —————————————————  PAGE  ————————————————— -->
<div class="login-shell">
    <div class="card-login">
        <h2>
            <i class="bi bi-shield-lock-fill me-2"></i>
            Zwei-Faktor-Authentifizierung
        </h2>
        <p class="lead">
            Bitte geben Sie den 6-stelligen Code aus Ihrer Authenticator-App ein.
        </p>

        <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
            <input asp-for="RememberMe" type="hidden" />
            <input asp-for="ReturnUrl" type="hidden" />

            <div asp-validation-summary="ModelOnly" class="text-danger validation-summary-errors mb-3"></div>

            <!-- 2FA Code -->
            <div class="input-wrap mb-3">
                <i class="bi bi-key-fill"></i>
                <input asp-for="Input.TwoFactorCode"
                       class="form-control"
                       placeholder="123 456"
                       autocomplete="one-time-code" />
            </div>
            <span asp-validation-for="Input.TwoFactorCode" class="text-danger small"></span>

            <!-- Computer merken -->
            <div class="form-check mb-4">
                <input class="form-check-input" asp-for="Input.RememberMachine" id="rememberMachine" />
                <label class="form-check-label small" asp-for="Input.RememberMachine">
                    Diesen Computer merken
                </label>
            </div>

            <!-- Submit -->
            <button type="submit" class="btn-primary-lg">
                Verifizieren &amp; Anmelden
            </button>

            @*      <!-- Or recovery code -->
            <p class="note divider"><span>or</span></p>
            <button type="button"
                    onclick="location.href='@Url.Page("./LoginWithRecoveryCode", new { returnUrl = Model.ReturnUrl })'"
                    class="btn-alt">
                <i class="bi bi-file-earmark-text"></i>
                Log in with recovery code
            </button> *@
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
