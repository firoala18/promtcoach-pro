@model ProjectsWebApp.Models.ViewModels.EigenfilterIndexVM
@using ProjectsWebApp.Models

@{
    var isFramework = Model.Type == PromptType.Framework;
    var isMeta      = Model.Type == PromptType.Meta;

    var types = new[] { PromptType.Eigenfilter, PromptType.Framework, PromptType.Meta };

    ViewData["Title"] = Model.Type switch
    {
        PromptType.Framework => "Framework entwickeln",
        PromptType.Meta      => "Meta entwickeln",
        _                    => "Szenarien entwickeln"
    };

    var currentTypeStr = Model.Type.ToString();

    var titleText = Model.Type switch
    {
        PromptType.Framework => "Framework entwickeln",
        PromptType.Meta      => "Meta entwickeln",
        _                    => "Szenarien entwickeln"
    };

    var applyLabel = Model.Type switch
    {
        PromptType.Framework => "Framework ",
        PromptType.Meta      => "Meta ",
        _                    => "Szenarien "
    };
}

