@{
    ViewData["Title"] = "Kontakt";
    var email = ViewBag.ContactEmail as string;
}

<style>
    :root {
        --clr-bg: #191919;
        --clr-card: #404040;
        --clr-secondary: #6B6B6B;
        --clr-text: white;
        --clr-muted: #9A9A9A;
    }

    body {
    /*     background: var(--clr-bg);
        color: var(--clr-text); */
        font-family: 'Segoe UI', sans-serif;
    }

    .contact-hero {
        position: relative;
        background: var(--clr-card);
        border-radius: 2rem;
        padding: 4rem 2rem;
        text-align: center;
        width: 100%;
        margin: 4rem 0;
        color: var( --clr-text)
    }

        .contact-hero h1 {
            font-size: 2.5rem;
            margin-bottom: 1rem;
        }

        .contact-hero p {
            font-size: 1.1rem;
            margin-bottom: 2rem;
            line-height: 1.4;
            color: var( --clr-text)
        }

    .contact-btn {
        font-size: 1rem;
        color: var(--clr-bg);
        background: var(--clr-text);
        border: none;
        padding: .75rem 1.5rem;
        border-radius: .5rem;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: .5rem;
        transition: background .2s;
    }

        .contact-btn:hover {
            background: var(--clr-secondary);
            color: var(--clr-text);
        }
</style>

<div class="contact-hero">
    <h1>Kontaktanfrage</h1>
    <p>@ViewBag.ContactMessage</p>

    <a class="contact-btn"
       href="mailto:@email">
        <i class="bi bi-envelope-fill"></i>
        E-Mail senden
    </a>
</div>
