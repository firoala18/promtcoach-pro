@model UebersichtContent

@{
    ViewData["Title"] = "Übersicht";
}

<div class="container-fluid px-4 mt-5">
    <div class="row">
        <div class="col-12 uebersicht-content">
            @Html.Raw(Model.ContentHtml)
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.uebersicht-content a').forEach(function (link) {
                link.setAttribute('target', '_blank');
            });
        });
    </script>
}
