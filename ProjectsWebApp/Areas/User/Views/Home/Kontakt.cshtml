@model IEnumerable<KontaktCard>

@{
    ViewData["Title"] = "Kontakt";
}

<style>
    /* Profile Image */
    .profile-image {
        text-align: center;
        margin-left: 2rem;
        display: flex;
        align-items: center;
    }

        .profile-image img {
            width: 200px;
            height: auto;
            border-radius: 20px;
            display: block;
        }

    /* Container */
    .container {
        margin-top: 10px;
        padding: 0 1rem;
    }

    /* Card */
    .card {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 2rem;
    }

    .card-title {
        font-size: 2rem;
        font-weight: bold;
        color: #333;
        text-align: center;
        margin-bottom: 1.5rem;
        position: relative;
    }

        .card-title::after {
            content: "";
            display: block;
            width: 60px;
            height: 3px;
            background: #89ba17;
            margin: 0.5rem auto;
            border-radius: 2px;
        }

    /* Contact Items */
    .contact-item {
        margin-bottom: 1.5rem;
        padding: 1rem;
        border-left: 4px solid #89ba17;
        background-color: #f9f9f9;
        border-radius: 4px;
    }

        .contact-item h5 {
            font-size: 1.2rem;
            color: #333;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .contact-item p {
            font-size: 1rem;
            color: #555;
            margin: 0;
        }

            .contact-item p a {
                color: #89ba17;
                text-decoration: none;
                font-weight: bold;
            }

                .contact-item p a:hover {
                    text-decoration: underline;
                }

    /* Horizontal Kontakt Card */
    .kontakt-horizontal {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
    }

    .contact-details {
        flex: 1;
    }

    /* Ensure newline chars are rendered as line-breaks */
    .card-text {
        white-space: pre-line;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .kontakt-horizontal {
            flex-direction: column;
            align-items: center;
        }

        .profile-image {
            margin-left: 0;
            margin-top: 1.5rem;
        }

            .profile-image img {
                width: 200px;
            }
    }
</style>

<div class="container">
    <div class="card">
        <h2 class="card-title">Kontakt</h2>

        @foreach (var kontakt in Model.OrderBy(k => k.DisplayOrder))
        {
            <div class="mb-2">
                <div class="card">
                    <div class="kontakt-horizontal">
                        <!-- Contact Details -->
                        <div class="contact-details">
                            <div class="contact-item">
                                @if (!string.IsNullOrEmpty(kontakt.Funktion))
                                {
                                    <h5>@kontakt.Funktion</h5>
                                }

                                @if (!string.IsNullOrEmpty(kontakt.Name))
                                {
                                    <h4>@kontakt.Name</h4>
                                }

                                @if (!string.IsNullOrEmpty(kontakt.KontaktDatenHtml))
                                {
                                    <div class="card-text">@Html.Raw(kontakt.KontaktDatenHtml)</div>
                                }
                            </div>
                        </div>

                        <!-- Image -->
                        @if (!string.IsNullOrEmpty(kontakt.ImageUrl))
                        {
                            <div class="profile-image">
                                <img src="@kontakt.ImageUrl" alt="@kontakt.Name" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.card-text').forEach(el => {
            /* 1. Convert <br> and </p> to newline chars */
            const cleaned = el.innerHTML
                .replace(/<br\s*\/?>/gi, '\n')
                .replace(/<\/p>/gi, '\n')
                .replace(/<p[^>]*>/gi, '')          /* remove opening <p> */

                /* --- optional: strip other tags you don’t want --- */
                .replace(/<\/?strong>/gi, '')       /* remove <strong> */
                .replace(/<\/?(ul|ol|li|blockquote)[^>]*>/gi, '')
                .replace(/&nbsp;/gi, ' ')
                .replace(/&lt;/gi, '<')
                .replace(/&gt;/gi, '>')
                .replace(/<\/?[a-z][a-z0-9]*[^<>]*>/gi, '') /* safety net */
                .trim();

            /* 2. Put plain text back so \n survives */
            el.textContent = cleaned;
        });
    </script>
}
